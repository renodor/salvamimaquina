<div id="forgot-password">
  <h6><%= t('spree.forgot_password').upcase %></h6>

  <p><%= t('spree.instructions_to_reset_password') %></p>
  <%= form_for Spree::User.new, as: :spree_user, url: reset_password_path do |f| %>
    <%= f.email_field :email, placeholder: t('spree.email'), required: true, class: 'login-input' %>
    <%= f.submit t('spree.reset_password'), class: 'btn btn-primary w-100' %>
  <% end %>
</div>