<div
  data-controller="products-search"
  id="products-search"
>
  <!-- Button trigger modal -->
  <button id="products-search-trigger" class="nav-link" type="button" data-bs-toggle="modal" data-bs-target="#productsSearchModal">
    <%= svg 'search' %>
  </button>

  <!-- Modal -->
  <div
    data-action="shown.bs.modal->products-search#modalOpened"
    class="modal fade"
    id="productsSearchModal"
    tabindex="-1"
    aria-labelledby="productsSearchModalLabel"
    aria-hidden="true"
  >
    <div class="modal-close">
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        <%= svg 'cross' %>
      </button>
    </div>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="productsSearchModalLabel">Â¿Que producto estas buscando?</h5>
        </div>
        <div class="modal-body">
          <%= form_tag search_results_products_path, method: :get do %>
            <%=
              text_field_tag :keywords,
              params[:keywords],
              placeholder: t('spree.search'),
              data: { "products-search-target": "input" }
            %>
            <button type="submit">
              <%= svg 'search' %>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>