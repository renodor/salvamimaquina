<% if slider.is_a?(Slider) %>
  <!-- Slider main container -->
  <div class="swiper"
    data-loop="<%= slider.slide_images.size > 1 %>"
    data-autoplay="<%= slider.auto_play %>"
    data-delay-between-slides="<%= slider.delay_between_slides %>"
    data-space-between-slides="<%= slider.space_between_slides %>"
    data-pagination="<%= slider.pagination %>"
    data-pagination="<%= slider.pagination %>"
    data-image-per-slide-s="<%= slider.image_per_slide_s %>"
    data-image-per-slide-m="<%= slider.image_per_slide_m %>"
    data-image-per-slide-l="<%= slider.image_per_slide_l %>"
    data-image-per-slide-xl="<%= slider.image_per_slide_xl %>"
    data-desktop-slides="<%= slider.slide_images.includes(:blob).map { |slide| cl_image_path(slide.key) }%>"
    data-mobile-slides="<%= slider.mobile_slide_images.includes(:blob).map { |slide| cl_image_path(slide.key) }%>"
  >
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper <%= slider.force_slide_full_width ? 'full-width-slides' : '' %>">
      <!-- Relevant slides (mobile or desktop) Slides will go here but will be added by JS -->
    </div>

    <% if slider.navigation %>
      <div class="swiper-navigation swiper-prev">
        <%= svg 'chevron_left' %>
      </div>
      <div class="swiper-navigation swiper-next">
        <%= svg 'chevron_right' %>
      </div>
    <% end %>

    <% if slider.pagination %>
      <div class="swiper-pagination"></div>
    <% end %>
  </div>
<% end %>
