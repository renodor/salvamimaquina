<footer id="footer">
  <div id="footer-content" class="container">
    <div class="footer-block">
      <h5><%= t('footer.social') %></h5>
      <div id="footer-social-grid">
        <%= link_to svg('facebook'), '#', target: '_blank' %>
        <%= link_to svg('instagram'), '#', target: '_blank' %>
        <%= link_to svg('whatsapp'), '#', target: '_blank' %>
        <%= link_to svg('twitter'), '#', target: '_blank' %>
      </div>
    </div>
    <div class="footer-block">
      <h5><%= t('footer.shops') %></h5>
      <p><%= link_to t('footer.locations'), '#' %></p>
      <p><%= link_to t('footer.open_times'), '#' %></p>
      <p><%= link_to t('contact_us'), contact_path %></p>
    </div>
    <div class="footer-block">
      <h5><%= t('footer.ecommerce') %></h5>
      <p><%= link_to t('footer.shipping_prices_zones_and_times'), shipping_informations_path %></p>
      <p><%= link_to t('footer.payment_methods'), '#' %></p>
    </div>
  </div>
</footer>
