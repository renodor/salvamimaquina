<div id="products-filters">
  <%= form_tag products_filter_path, method: :get, id: 'products-searcher' do %>
    <%= hidden_field_tag 'per_page', params[:per_page] %>
    <%= hidden_field_tag 'taxon_id', @taxon&.id %>
    <!-- We need this extra div so that the previous hidden field tags are not taken into account when applying CSS :first-child and :last-child selectors -->
    <div>
      <%= render 'spree/shared/filters/model_filter' %>
      <%= render 'spree/shared/filters/color_filter' %>
      <%= render 'spree/shared/filters/price_range_slider' %>
      <%= render 'spree/shared/filters/capacity_filter' %>
      <%#= render 'spree/shared/filters/on_sale_products_filter' %>
    </div>
  <% end %>
</div>