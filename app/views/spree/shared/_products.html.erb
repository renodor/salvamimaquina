<%
  paginated_products = @searcher.retrieve_products if params.key?(:keywords)
  paginated_products ||= products
%>

<% content_for :head do %>
  <% if paginated_products.respond_to?(:total_pages) %>
    <%= rel_next_prev_link_tags paginated_products %>
  <% end %>
<% end %>

<div data-hook="products_search_results_heading">
  <% if products.blank? %>
    <div data-hook="products_search_results_heading_no_results_found">
      <%= t('spree.no_products_found') %>
    </div>
  <% elsif params.key?(:keywords) %>
    <div data-hook="products_search_results_heading_results_found">
      <h6 class="search-results-title"><%= t('spree.search_results', keywords: h(params[:keywords])) %></h6>
    </div>
  <% end %>
</div>
<% if products.present? %>
  <ul id="products" class="inline product-listing" data-hook>
    <% products.each do |product| %>
      <% cheapest_variant = product.cheapest_variant %>
      <li id="product_<%= product.id %>" data-hook="products_list_item" itemscope itemtype="http://schema.org/Product">
        <div class="product-image">
          <%= cl_image_tag_with_folder cheapest_variant.images.first&.attachment, width: 540, crop: :fill, model: Spree::Image %>
        </div>
        <div class="product-name"><%= product.name %></div>
        <span class="prices" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
          <% cheapest_variant_is_on_sale = cheapest_variant.on_sale? %>
          <% if cheapest_variant_is_on_sale %>
            <span class="price selling" itemprop="price" content="<%= cheapest_variant.price %>">
              <%= number_to_currency(cheapest_variant.price) %>
            </span>
          <% end %>
          <span class="price selling <%= cheapest_variant_is_on_sale ? 'crossed' : '' %>" itemprop="price" content="<%= cheapest_variant.original_price %>">
            <%= number_to_currency(cheapest_variant.original_price) %>
          </span>
          <span itemprop="priceCurrency" content="<%= current_pricing_options.currency %>"></span>
        </span>
        <%= link_to '', spree.product_es_mx_path(product, taxon_id: @taxon.try(:id)), class: 'product-link full-absolute', itemprop: "name", title: product.name %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if paginated_products.respond_to?(:total_pages) %>
  <%= paginate paginated_products %>
<% end %>