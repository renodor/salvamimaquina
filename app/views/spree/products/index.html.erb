<%= render 'spree/shared/banner', banner: @banner %>
<div id="categories">
  <h2><%= @root_taxon.name.capitalize %></h2>
  <div id="categories-grid">
    <% @root_taxon.children.each do |category| %>
      <div class="position-relative category">
        <p><%= category.name %></p>
        <%= cl_image_tag_with_folder(category.icon, width: 500, crop: :fill, model: Spree::Taxon) %>
        <%= link_to '', spree.nested_taxons_path(category), class: 'full-absolute' %>
      </div>
    <% end %>
  </div>
</div>