<%
=begin%>
 <% if params[:keywords] %>

  <div data-hook="search_results">
    <% if @products.empty? %>
      <h6 class="search-results-title"><%= t('spree.no_products_found') %></h6>
    <% else %>
      <%= render partial: 'spree/shared/products', locals: { products: @products, taxon: @taxon } %>
    <% end %>
  </div>

<% else %> 
<%
=end%>

  <% @brands.each do |brand| %>
    <div class="container brand-grid">
      <h2><%= brand.name.capitalize %></h2>
      <div class="row">
        <% brand.children.each do |child| %>
          <% next unless child.depth - brand.depth == 1 %>
          <div class="col-3">
            <div class="position-relative brand-category">
              <span><%= child.name %></span>
              <%= cl_image_tag(child.icon.try(:key)) %>
              <%= link_to '', spree.nested_taxons_path(child), class: 'full-absolute' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    </div>
  <% end %>

<%# end %>
