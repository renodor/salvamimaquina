<% admin_layout "full-width" %>

<% admin_breadcrumb(link_to 'Banners', spree.admin_banners_path) %>
<% admin_breadcrumb('New Banner') %>

<%= simple_form_for @banner, url: admin_banner_path do |f| %>
  <%= f.input :location, collection: Banner.locations.keys %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

