<div class="trade-in">
  <h2><%= t('trade_in_request_confirmed') %></h2>
  <div
    id="trade-in-promo"
    class="centered-flexbox"
    style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_url 'tradein3.jpeg' %>');"
  >
    <div>
      <% if @trade_in_request.with_promo %>
        <p><%= raw t('complete_trade_in_to_have_a_promo', validity: @coupon_validity_text, amount: '20%') %> **</p>
        <span id="trade-in-coupon-code"><%= @trade_in_request.coupon_code %></span>
        <p>(<%= t('you_have_until', date: I18n.localize((@trade_in_request.created_at + @coupon_validity.days), format: :simple).titleize) %>)</p>
        <p><small><i><%= t('not_valid_online') %></i></small></p>
      <% else %>
        <p><%= t('complete_trade_in') %></p>
      <% end %>
    </div>
  </div>

  <hr />

  <div class="trade-in-first-part">
    <h2><%= t('your_trade_in') %></h2>
    <div class="trade-in-model-price">
      <p class="model-name-paragraph">
        <%= t('you_have_a') %> <b class="model-name"><%= @trade_in_model.name %></b>
      </p>
      <p class="model-values">
        (<%= t('estimated_value_between') %> <b class="model-min-value"><%= number_to_currency(@trade_in_model.min_value) %></b> <%= t('and') %> <b class="model-max-value"><%= number_to_currency(@trade_in_model.max_value) %></b>) *
      </p>
    </div>
  </div>

  <div class="trade-in-second-part">
    <div class="trade-in-arrow-separation">
      <%= svg 'arrow_down_circle' %>
    </div>

    <div class="variant-infos">
      <div class="variant-price-to-compute centered-flexbox">
        <div>
          <%= t('you_can_by_a') %> <b class="variant-name"><%= @variant.name %></b> - <b class="variant-options"><%= @variant.options_text %></b>
          <br />
          <%= t('between') %> <b class="variant-min-price"><%= number_to_currency(@variant.price - @trade_in_model.min_value.to_f) %></b> <%= t('and') %> <b class="variant-max-price"><%= number_to_currency(@variant.price - @trade_in_model.max_value.to_f) %></b>
        </div>
      </div>
      <div class="variant-image">
        <%= cl_image_tag_with_folder(@variant.images.first&.attachment, width: 200, crop: :fill, model: Spree::Image) %>
      </div>
      <p>
        <i>(<%= t('instead_of') %> <b class="variant-price"><%= number_to_currency(@variant.price) %></b>)</i>
      </p>
    </div>
  </div>
  <div class="trade-in-disclaimers">
    <p><i>* <%= t('trade_in_disclaimer') %></i></p>
    <p><i>** <%= t('trade_in_promo_restrictiones') %></i></p>
  </div>
</div>