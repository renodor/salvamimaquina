<div id="edit-user-address">
  <h1><%= t('spree.edit_my_address') %></h1>
  <div>
    <%= form_for @user.ship_address, url: account_update_user_address_path, method: :put do |ship_form| %>
      <%= render partial: 'spree/address/form', locals: { form: ship_form, address_type: 'shipping', address: @user.ship_address } %>
      <div id="missing-map-pin" class=""><%= t('spree.missing_map_pin') %></div>
      <div id="map" style="width: 100%; height: 600px;"></div>
      <p>
        <%= ship_form.submit t('spree.update').upcase, class: 'btn btn-primary', data: { input: 'map_submit' } %>
      </p>
    <% end %>
  </div>
</div>