{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "max-len": ["error", 200, 2, {
          "ignoreComments": true
        }
      ],
      "comma-dangle": ["error", "never"],
      "object-curly-spacing": ["error", "always"],
      "brace-style": [
        "error",
        "1tbs",
        { "allowSingleLine": true }
      ],
      "block-spacing": ["error", "always"]
    }
}
